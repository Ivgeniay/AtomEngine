<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>

  <PropertyGroup>
    <MSBuildTreatWarningsAsErrors>false</MSBuildTreatWarningsAsErrors>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)\Generated</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Config\GlslTypes.json" />
    <None Remove="Config\ShaderConfig.json" />
    <None Remove="Geometry\Standart\cone.obj" />
    <None Remove="Geometry\Standart\cube.obj" />
    <None Remove="Geometry\Standart\cylinder.obj" />
    <None Remove="Geometry\Standart\icosphere.obj" />
    <None Remove="Geometry\Standart\sphere.obj" />
    <None Remove="Geometry\Standart\torus.obj" />
    <None Remove="Shaders\ShaderSource\BaseParts\LightFunctions.glsl" />
    <None Remove="Shaders\ShaderSource\BaseParts\LightUniform.glsl" />
    <None Remove="Shaders\ShaderSource\BaseParts\MatrixFunctions.glsl" />
    <None Remove="Shaders\ShaderSource\BaseParts\VertexAttributes.glsl" />
    <None Remove="Shaders\ShaderSource\BaseParts\VertexFuncs.glsl" />
    <None Remove="Shaders\ShaderSource\BaseParts\VertexUniforms.glsl" />
    <None Remove="Shaders\ShaderSource\Kek\TestFragmentShader.glsl" />
    <None Remove="Shaders\ShaderSource\Kek\Vertex.glsl" />
    <None Remove="Shaders\ShaderSource\StandartShader\Fragment.glsl" />
    <None Remove="Shaders\ShaderSource\StandartShader\Vertex.glsl" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Config\ShaderConfig.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AdditionalFiles>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Config\GlslTypes.json" />
    <EmbeddedResource Include="Geometry\Standart\cone.obj" />
    <EmbeddedResource Include="Geometry\Standart\cube.obj" />
    <EmbeddedResource Include="Geometry\Standart\cylinder.obj" />
    <EmbeddedResource Include="Geometry\Standart\icosphere.obj" />
    <EmbeddedResource Include="Geometry\Standart\sphere.obj" />
    <EmbeddedResource Include="Geometry\Standart\torus.obj" />
    <EmbeddedResource Include="Shaders\ShaderSource\BaseParts\LightFunctions.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\BaseParts\LightUniform.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\BaseParts\MatrixFunctions.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\BaseParts\VertexAttributes.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\BaseParts\VertexFuncs.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\BaseParts\VertexUniforms.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\Kek\TestFragmentShader.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\Kek\TestVertexShader.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\Kek\Ko\Vertex.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\StandartShader\Fragment.glsl" />
    <EmbeddedResource Include="Shaders\ShaderSource\StandartShader\Vertex.glsl" />
  </ItemGroup> 

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Silk.NET" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Assimp" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Core" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Input" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Input.Extensions" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Maths" Version="2.22.0" />
    <PackageReference Include="Silk.NET.OpenGL" Version="2.22.0" />
    <PackageReference Include="Silk.NET.OpenGLES.Extensions.EXT" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Windowing" Version="2.22.0" />
    <PackageReference Include="StbImageSharp" Version="2.30.15" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CommonLib\CommonLib.csproj" />
    <ProjectReference Include="..\EngineLib\EngineLib.csproj" />
    <ProjectReference Include="..\Generator\Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
