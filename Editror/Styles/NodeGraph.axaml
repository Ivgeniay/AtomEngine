<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Editor="using:Editor">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <Style Selector="Editor|NodeGraphController">
    <Setter Property="Background" Value="#1E1E1E"/>
  </Style>

  <!-- Стили для Canvas -->
  <Style Selector="Editor|NodeGraphController Canvas">
    <Setter Property="Background" Value="#1E1E1E"/>
  </Style>

  <!-- Стили для ноды -->
  <Style Selector="Editor|NodeElement">
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <Style Selector="Border.nodeBackground">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="BorderBrush" Value="#3F3F46"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="BoxShadow" Value="0 2 4 0 #0A0A0A"/>
  </Style>

  <Style Selector="Border.nodeBackground:pointerover">
    <Setter Property="BorderBrush" Value="#555555"/>
  </Style>

  <!-- Заголовок ноды -->
  <Style Selector="TextBlock.nodeTitle">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="#D0D0D0"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="Margin" Value="0 0 0 5"/>
  </Style>

  <!-- Стили для пинов -->
  <Style Selector="TextBlock.pinTitle">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="Foreground" Value="#BBBBBB"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <!-- Стили для соединений -->
  <Style Selector="Editor|NodeConnection Path">
    <Setter Property="StrokeThickness" Value="2"/>
    <Setter Property="Stroke" Value="#666666"/>
    <Setter Property="StrokeLineCap" Value="Round"/>
  </Style>

  <!-- Стили для контекстного меню -->
  <Style Selector="Editor|NodeGraphController Border">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="BorderBrush" Value="#3F3F46"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="3"/>
  </Style>

  <!-- Стили для кнопок в контекстном меню -->
  <Style Selector="Button.menuItem">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="10 6"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <Style Selector="Button.menuItem:pointerover">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Button.menuItem:pressed">
    <Setter Property="Background" Value="#007ACC"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <!-- Стили для кнопок на панели инструментов -->
  <Style Selector="Editor|NodeGraphController Button.toolButton">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#555555"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="8 4"/>
    <Setter Property="CornerRadius" Value="2"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <Style Selector="Editor|NodeGraphController Button.toolButton:pointerover">
    <Setter Property="Background" Value="#44444A"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Editor|NodeGraphController Button.toolButton:pressed">
    <Setter Property="Background" Value="#2D2D30"/>
  </Style>

  <!-- Стили для скроллбаров -->
  <Style Selector="ScrollBar">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="#3E3E42"/>
  </Style>

  <Style Selector="ScrollBar:pointerover">
    <Setter Property="Foreground" Value="#636363"/>
  </Style>

  <Style Selector="ScrollBar Thumb">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="4"/>
  </Style>

  <Style Selector="ScrollBar Thumb:pointerover">
    <Setter Property="Background" Value="#636363"/>
  </Style>

  <Style Selector="ScrollBar Thumb:pressed">
    <Setter Property="Background" Value="#007ACC"/>
  </Style>

  <!-- Стили для разных типов нод -->
  <Style Selector="Editor|NodeElement Border.nodeBackground">
    <Setter Property="Background" Value="#2D3A42"/>
    <Setter Property="BorderBrush" Value="#3F5A70"/>
  </Style>

  
  
</Styles>
