<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Editor="using:Editor">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <!-- Общие стили для инспектора -->
  <Style Selector="Editor|InspectorController">
    <Setter Property="Background" Value="#383838"/>
  </Style>


  <!-- Стиль для контейнера -->
  <Style Selector="StackPanel.innerContainer">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Spacing" Value="4"/>
  </Style>

  <!-- Создаем отдельный класс для элементов внутри контейнера -->
  <Style Selector="Border.containerItem">
    <Setter Property="Background" Value="#2D2D2D"/>
    <Setter Property="BorderBrush" Value="#3F3F46"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="Margin" Value="2"/>
  </Style>
  
  
  <!-- Стиль для ScrollViewer -->
  <Style Selector="Editor|InspectorController ScrollViewer">
    <Setter Property="Background" Value="#2A2A2A"/>
  </Style>

  <!-- Стиль для основного контейнера -->
  <Style Selector="Editor|InspectorController StackPanel">
    <Setter Property="Margin" Value="8"/>
    <Setter Property="Spacing" Value="4"/>
  </Style>

  <!-- Заголовок инспектора -->
  <Style Selector="TextBlock.inspectorTitle">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Foreground" Value="#E6E6E6"/>
    <Setter Property="Margin" Value="0,0,0,8"/>
  </Style>

  <!-- Кнопки инспектора -->
  <Style Selector="Button.inspectorActionButton">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#555555"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="8 4"/>
    <Setter Property="CornerRadius" Value="2"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="Margin" Value="0 0"/>
    <Setter Property="Height" Value="28"/>
  </Style>

  <Style Selector="Button.inspectorActionButton:pointerover">
    <Setter Property="Background" Value="#44444A"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Button.inspectorActionButton:pressed">
    <Setter Property="Background" Value="#2D2D30"/>
  </Style>

  <!-- Стили для кнопок-иконок в инспекторе -->
  <Style Selector="Button.inspectorIconButton">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="#AAAAAA"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Width" Value="24"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Padding" Value="4"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <Style Selector="Button.inspectorIconButton:pointerover">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Button.inspectorIconButton:pressed">
    <Setter Property="Background" Value="#007ACC"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <!-- Заголовки компонентов -->
  <Style Selector="TextBlock.componentHeader">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Foreground" Value="#B4B4B4"/>
    <Setter Property="Background" Value="#404040"/>
    <Setter Property="Padding" Value="4,6"/>
    <Setter Property="Margin" Value="0,4"/>
  </Style>

  <!-- Стили для элементов ввода -->
  <Style Selector="TextBox.propertyEditor">
    <Setter Property="Background" Value="#3C3C3C"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#222222"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Padding" Value="4,0"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <Style Selector="TextBox.propertyEditor:pointerover">
    <Setter Property="Background" Value="#454545"/>
    <Setter Property="BorderBrush" Value="#4A4A4A"/>
  </Style>

  <Style Selector="TextBox.propertyEditor:focus">
    <Setter Property="Background" Value="#3C3C3C"/>
    <Setter Property="BorderBrush" Value="#007ACC"/>
  </Style>

  <!-- Стили для NumericUpDown -->
  <Style Selector="NumericUpDown.propertyEditor">
    <Setter Property="Background" Value="#3C3C3C"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#222222"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="ButtonSpinnerLocation" Value="Right"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <!-- Стили для CheckBox -->
  <Style Selector="CheckBox.propertyEditor">
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="Background" Value="#3C3C3C"/>
    <Setter Property="BorderBrush" Value="#222222"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <!-- Стили для разделителя -->
  <Style Selector="Separator">
    <Setter Property="Background" Value="#3F3F3F"/>
    <Setter Property="Height" Value="1"/>
    <Setter Property="Margin" Value="0,4"/>
  </Style>

  <!-- Стили для кнопок в кастомных контролах -->
  <Style Selector="Button.inspectorButton">
    <Setter Property="Background" Value="#4D4D4D"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#222222"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <Style Selector="Button.inspectorButton:pointerover">
    <Setter Property="Background" Value="#5A5A5A"/>
    <Setter Property="BorderBrush" Value="#007ACC"/>
  </Style>

  <Style Selector="Button.inspectorButton:pressed">
    <Setter Property="Background" Value="#444444"/>
    <Setter Property="BorderBrush" Value="#007ACC"/>
  </Style>

  <!-- Стили для меток свойств -->
  <Style Selector="TextBlock.propertyLabel">
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Margin" Value="0,0,8,0"/>
  </Style>

  <!-- Стили для Grid внутри InspectorController -->
  <Style Selector="Editor|InspectorController Grid">
    <Setter Property="Margin" Value="0"/>
  </Style>

  <!-- Компактный стиль для NumericUpDown в векторных полях -->
  <Style Selector="NumericUpDown.vectorEditor">
    <Setter Property="Background" Value="#3C3C3C"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#222222"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="ButtonSpinnerLocation" Value="Right"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Margin" Value="0,0,4,0"/>
  </Style>

  <!-- Стиль для текстового поля внутри NumericUpDown -->
  <Style Selector="NumericUpDown.vectorEditor /template/ TextBox">
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="CaretBrush" Value="#CCCCCC"/>
    <Setter Property="SelectionBrush" Value="#264F78"/>
    <Setter Property="SelectionForegroundBrush" Value="#FFFFFF"/>
  </Style>

  <Style Selector="NumericUpDown.vectorEditor /template/ TextBox:focus">
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="NumericUpDown.vectorEditor:pointerover">
    <Setter Property="Background" Value="#454545"/>
    <Setter Property="BorderBrush" Value="#4A4A4A"/>
  </Style>

  <Style Selector="NumericUpDown.vectorEditor:focus">
    <Setter Property="Background" Value="#3C3C3C"/>
    <Setter Property="BorderBrush" Value="#007ACC"/>
  </Style>

  <Style Selector="NumericUpDown.vectorEditor:pointerover:focus">
    <Setter Property="Background" Value="#2A2A30"/>
    <Setter Property="BorderBrush" Value="#1C97EA"/>
  </Style>

</Styles>
