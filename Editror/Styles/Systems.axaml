<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Editor="using:Editor">

  <!-- Стили для основного контроллера -->
  <Style Selector="Editor|SystemDependencyController">
    <Setter Property="Background" Value="#1E1E1E"/>
  </Style>

  <!-- Стили для панелей -->
  <Style Selector="StackPanel.parametersPanel">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="Margin" Value="10"/>
  </Style>

  <Style Selector="TextBlock.parameterTitle">
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Margin" Value="0,0,0,10"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
  </Style>

  <Style Selector="TextBlock.parameterLabel">
    <Setter Property="Margin" Value="0,5,0,2"/>
    <Setter Property="Foreground" Value="#AAAAAA"/>
  </Style>

  <!-- Стили для кнопок категорий -->
  <Style Selector="Button.categoryButton">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#555555"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="2"/>
    <Setter Property="Width" Value="120"/>
    <Setter Property="Height" Value="30"/>
    <Setter Property="Margin" Value="5,0"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <Style Selector="Button.categoryButton:pointerover">
    <Setter Property="Background" Value="#44444A"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Button.categoryButton:pressed">
    <Setter Property="Background" Value="#2D2D30"/>
  </Style>

  <Style Selector="Button.categoryButton.selected">
    <Setter Property="Background" Value="#007ACC"/>
    <Setter Property="BorderBrush" Value="#1C97EA"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <!-- Стили для карточек систем -->
  <Style Selector="Border.systemCard">
    <Setter Property="Padding" Value="10"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#444444"/>
    <Setter Property="Background" Value="#2D2D30"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="Width" Value="200"/>
    <Setter Property="MinHeight" Value="60"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.1"/>
        <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Border.systemCard:pointerover">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="BorderBrush" Value="#5E5E66"/>
  </Style>

  <Style Selector="TextBlock.systemTitle">
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="MaxWidth" Value="160"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
  </Style>

  <!-- Стили для кнопок карточек системы -->
  <Style Selector="Button.systemCardButton">
    <Setter Property="Background" Value="#333337"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderBrush" Value="#444444"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="2"/>
    <Setter Property="Width" Value="24"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <Style Selector="Button.systemCardButton:pointerover">
    <Setter Property="Background" Value="#44444A"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Button.systemCardButton:pressed">
    <Setter Property="Background" Value="#2D2D30"/>
  </Style>

  <!-- Стили для контейнера систем -->
  <Style Selector="StackPanel.systemStack">
    <Setter Property="Orientation" Value="Vertical"/>
    <Setter Property="Spacing" Value="5"/>
    <Setter Property="Width" Value="200"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Top"/>
    <Setter Property="Margin" Value="10"/>
  </Style>

  <!-- Стили для контекстного меню -->
  <Style Selector="ContextMenu.systemContextMenu">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="BorderBrush" Value="#3F3F46"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <Style Selector="MenuItem.systemMenuItem">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="Padding" Value="8,5"/>
  </Style>

  <Style Selector="MenuItem.systemMenuItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="TextBlock.Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="MenuItem.systemMenuItem:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="#007ACC"/>
    <Setter Property="TextBlock.Foreground" Value="#FFFFFF"/>
  </Style>
</Styles>