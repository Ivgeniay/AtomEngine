<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Editor="using:Editor">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>


  <!-- Основные стили для ComponentSearchDialog -->
  <Style Selector="Editor|ComponentSearchDialog">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="BorderBrush" Value="#3F3F46"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="Width" Value="250"/>
    <Setter Property="MaxHeight" Value="300"/>
    <Setter Property="ZIndex" Value="9999"/>
    <Setter Property="BoxShadow" Value="0 3 5 0 #0A0A0A"/>
    <Setter Property="ClipToBounds" Value="False"/>
  </Style>

  <!-- Стили для поля поиска -->
  <Style Selector="Editor|ComponentSearchDialog TextBox">
    <Setter Property="Background" Value="#2D2D30"/>
    <Setter Property="Foreground" Value="#DCDCDC"/>
    <Setter Property="BorderBrush" Value="#3F3F46"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="5 3"/>
    <Setter Property="CornerRadius" Value="2"/>
    <Setter Property="SelectionBrush" Value="#264F78"/>
    <Setter Property="SelectionForegroundBrush" Value="#FFFFFF"/>

    <Setter Property="FontFamily" Value="Consolas, Menlo, Monospace"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="CaretBrush" Value="#007ACC"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog TextBox:focus">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="BorderBrush" Value="#007ACC"/>
    <Setter Property="Foreground" Value="#E6E6E6"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog TextBox:pointerover">
    <Setter Property="BorderBrush" Value="#555555"/>
  </Style>

  <!-- Стили для элементов списка -->
  <Style Selector="Editor|ComponentSearchDialog Button.menuItem">
    <Setter Property="Background" Value="#252526"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="8 6"/>
    <Setter Property="CornerRadius" Value="0"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog Button.menuItem:pointerover">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog Button.menuItem:pressed">
    <Setter Property="Background" Value="#007ACC"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog Button.menuItem:focus">
    <Setter Property="Background" Value="#2D2D30"/>
    <Setter Property="BorderBrush" Value="#007ACC"/>
  </Style>

  <!-- Стили для заголовков категорий -->
  <Style Selector="Editor|ComponentSearchDialog TextBlock">
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <Style Selector="TextBlock.categoryHeader">
    <Setter Property="Foreground" Value="#B4B4B4"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Margin" Value="8 4"/>
  </Style>

  <!-- Стили для иконок компонентов -->
  <Style Selector="TextBlock.componentIcon">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="Width" Value="16"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>

  <!-- Стили для названий компонентов -->
  <Style Selector="TextBlock.componentName">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Foreground" Value="#CCCCCC"/>
    <Setter Property="FontWeight" Value="Medium"/>
  </Style>

  <!-- Стили для подзаголовков (например, "Component") -->
  <Style Selector="TextBlock.componentSubtitle">
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Foreground" Value="#888888"/>
    <Setter Property="Margin" Value="4 0 0 0"/>
  </Style>

  <!-- Стили для описаний компонентов -->
  <Style Selector="TextBlock.componentDescription">
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="Foreground" Value="#AAAAAA"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="Margin" Value="24 0 0 0"/>
  </Style>

  <!-- Стили для сообщения "Ничего не найдено" -->
  <Style Selector="TextBlock.noResults">
    <Setter Property="Foreground" Value="#AAAAAA"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="TextAlignment" Value="Center"/>
    <Setter Property="Margin" Value="8 12"/>
  </Style>

  <!-- Стили для скроллбара -->
  <Style Selector="Editor|ComponentSearchDialog ScrollViewer">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog ScrollBar">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="#3E3E42"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog ScrollBar:pointerover">
    <Setter Property="Foreground" Value="#636363"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog ScrollBar Thumb">
    <Setter Property="Background" Value="#3E3E42"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="4"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog ScrollBar Thumb:pointerover">
    <Setter Property="Background" Value="#636363"/>
  </Style>

  <Style Selector="Editor|ComponentSearchDialog ScrollBar Thumb:pressed">
    <Setter Property="Background" Value="#007ACC"/>
  </Style>
  
</Styles>
